<h1>Registration Web Application</h1>

<form action="/regnumbers" method="POST">
<div class="input">
   <input type="text" name="reg" placeholder="enter a registration here">
   <button>Add</button>
</div>
</form>

<form action="/filter" method="POST">
  <div class="radio">
   <input type="radio" name="town" value="CA">
   <span>Cape Town</span>
   <input type="radio" name="town" value="CJ">
   <span>Paarl</span>
   <input type="radio" name="town" value="CAG">
   <span>George</span>
   <input type="radio" name="town" value="CL">
   <span>Stellenbosch</span>
   <button>Show</button> 
</div>
</form>

 
<div  class="registration-grid">
{{#each regNumbers}}
<div class="registration">
  <tr>
    <td>
      <p>{{this.registration_number}}</p>
    </td>
  </tr>
</div>
{{/each}}
</div>

<div  class="registration-grid">
{{#each filteredTown}}
<div class="registration">
  <tr>
    <td>
      <p>{{this.registration_number}}</p>
    </td>
  </tr>
</div>
{{/each}}
</div>
